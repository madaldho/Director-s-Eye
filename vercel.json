{
  "version": 2,
  "installCommand": "npm install && cd server && npm install && cd ../client && npm install",
  "buildCommand": "cd client && npx vite build",
  "outputDirectory": "client/dist",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 60,
      "includeFiles": "server/**"
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
